<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">
		<RelativeLayout
			android:id="@+id/page_bluetooth_check_screen_ek1"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">

			<ImageView
				android:id="@+id/background"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@drawable/bluetooth_cheker_bacground"
				android:contentDescription="@string/cheker_bacground" />

			<LinearLayout
				android:id="@+id/bluetooth_message"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="55dp"
				android:layout_marginTop="55dp"
				android:orientation="vertical"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent">

				<TextView
					android:id="@+id/header_bluetooth_check"
					android:layout_width="300.4dp"
					android:layout_height="73.4dp"
					android:layout_gravity="center_horizontal|center"
					android:fontFamily="@font/open_sans"
					android:gravity="center"
					android:text="@string/header_bluetooth_check"
					android:textColor="@color/grey_color"
					android:textSize="24sp"
					tools:ignore="TextSizeCheck,TextSizeCheck" />

				<TextView
					android:id="@+id/bluetooth_text"
					android:layout_width="127.4dp"
					android:layout_height="40.4dp"
					android:layout_gravity="center_horizontal|center"
					android:fontFamily="@font/open_sans"
					android:gravity="center"
					android:text="@string/bluetooth_string"
					android:textColor="@color/bluetooth_color"
					android:textSize="24sp"
					android:textStyle="bold"
					tools:ignore="TextSizeCheck" />


				<Button
					android:id="@+id/bluetoothCheckButton"
					android:layout_width="255dp"
					android:layout_height="60dp"
					android:layout_gravity="center"
					android:layout_marginTop="400dp"
					android:backgroundTint="@color/_bg___blutooth_check_button_ek1_color"
					android:fontFamily="@font/open_sans"
					android:paddingStart="16dp"
					android:paddingTop="8dp"
					android:paddingEnd="16dp"
					android:paddingBottom="8dp"
					android:text="@string/submit_bluetooth_button_text"
					android:textSize="20sp"
					android:textStyle="bold"
					android:typeface="normal"
					app:icon="@android:drawable/stat_sys_data_bluetooth"
					app:iconSize="40dp"
					app:iconTint="#7DB53C"
					android:clickable="true"
					android:focusable="true"/>


			</LinearLayout>
		</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>