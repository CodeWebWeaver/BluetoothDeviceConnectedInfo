<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/bluetooth_check_screen"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<RelativeLayout
			android:id="@+id/page_bluetooth_check_screen_ek1"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">

			<View
				android:id="@+id/_bg__bluetooth_check_screen_ek2"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@drawable/_bg__bluetooth_check_screen_ek2_shape" />

			<ImageView
				android:id="@+id/background"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@drawable/bluetooth_cheker_bacground" />

			<LinearLayout
				android:id="@+id/bluetooth_message"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="55dp"
				android:layout_marginTop="55dp"
				android:orientation="vertical"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent">

				<TextView
					android:id="@+id/header_bluetooth_check"
					android:layout_width="300.4dp"
					android:layout_height="73.4dp"
					android:layout_gravity="center_horizontal|center"
					android:gravity="center"
					android:text="@string/header_bluetooth_check"
					android:textColor="@color/grey_color"
					android:textSize="24sp" />

				<TextView
					android:id="@+id/bluetooth_text"
					android:layout_width="127.4dp"
					android:layout_height="40.4dp"
					android:layout_gravity="center_horizontal|center"
					android:gravity="center"
					android:text="@string/bluetooth_string"
					android:textColor="@color/bluetooth_color"
					android:textSize="24sp"
					android:textStyle="bold" />

				<RelativeLayout
					android:id="@+id/bluetooth_check_button"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="400dp"
					android:layout_gravity="center">

					<View
						android:id="@+id/_bg___bluetooth_check_button_ek1"
						android:layout_width="217dp"
						android:layout_height="58dp"
						android:background="@drawable/_bg___bluetooth_check_button_ek1_shape" />

					<RelativeLayout
						android:id="@+id/bluetooth_picture"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="12dp"
						android:layout_marginTop="9dp">

						<View
							android:id="@+id/ellipse_1"
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:background="@drawable/ellipse_1_shape" />

						<ImageView
							android:id="@+id/bluetooth_icon"
							android:layout_width="10.67dp"
							android:layout_height="24dp"
							android:layout_marginStart="15dp"
							android:layout_marginTop="8dp"
							android:contentDescription="@string/bluetooth_icon_descr"
							android:src="@drawable/bluetooth_vector" />

					</RelativeLayout>

					<TextView
						android:id="@+id/submit_bluetooth_button"
						android:layout_width="149dp"
						android:layout_height="60dp"
						android:layout_gravity="center_horizontal|center"
						android:layout_marginStart="60dp"
						android:layout_marginTop="2dp"
						android:gravity="center"
						android:text="@string/submit_bluetooth_button_text"
						android:textColor="@color/bluetooth_color"
						android:textSize="20sp"
						android:textStyle="bold" />

				</RelativeLayout>
			</LinearLayout>
		</RelativeLayout>
	</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>